<!-- notice to show if form submission is unsuccessful -->
    <div class="jumbotron">
    	<div class="span8 offset1">
        <h3><span style="color: rgb(167, 43, 77)">We hope these webinars have been informative. To help us improve future broadcasts, please provide us with your comments below.</span></h3>
<br>
		<!-- flash_notice to show if form submission is successful -->
	<div class="alert alert-success" id="form-success" style="display: none;">
		<strong>Thank you for your feedback.</strong>
	</div>

	<!-- flash_notice to show if form submission is unsuccessful -->
	<div class="alert alert-error" id="form-error" style="display: none;">
		<strong>Please fill in all fields.</strong>
	</div>

	<h4><span style="color: rgb(167, 43, 77)">
		Please submit a question in the box below:
	</span></h4>

<div class="login span8 offset1">
		<%= simple_form_for @feedback, :url => feedback_path, method: :post, remote: true, html: { class: "form-horizontal"} do |form| %>

			  <%= form.input :name, label: 'Name', required: false %>
			  <%= form.input :email, label: 'E-mail Address', required: false %>
		  	  <%= form.input :body, label: 'Comments', required: false, as: :text, input_html: { rows: "3" } %>
		  <br>
		  </div>

			  <fieldset class="actions">
			    <%= form.submit "Send", class: 'btn btn-primary btn-large' %>
			  </fieldset>
		<% end %>
	</div>
    <div class="bird">
    	<img src="assets/bird_oncology.png"/>
    </div>
</div>
              <%= render 'layouts/prefooter' %>
